<ul>
  <% if ::Refinery::Employees::Admin::EmployeesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.employees_admin_employees_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_employees_admin_employee_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Employees::Admin::EmployeesController.sortable? && ::Refinery::Employees::Employee.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Employees"),
                 refinery.employees_admin_employees_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Employees"),
                 refinery.employees_admin_employees_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
